        </Menu>
        <Grid Grid.Row="0" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Padding="4" Text="Wyszukaj..."></TextBox>
            <Button Grid.Column="1" Content="Wyszukaj"></Button>
        </Grid>
        
        
        
        
        
        
        
        
        
        <ToolBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="Azure">
            <ToggleButton Command="EditingCommands.ToggleBold" Name="btnBold">
                <Image Source="/Resources/boldTextIcon.png" Height="12" Width="12" Margin="6,0"/>
            </ToggleButton>
            
            <ToggleButton Command="EditingCommands.ToggleItalic" Name="btnItalic">
                <Image Source="/Resources/italicTextIcon.png" Height="12" Width="12" Margin="6,0"/>
            </ToggleButton>
            
            <ToggleButton Command="EditingCommands.ToggleUnderline" Name="btnUnderline">
                    <Image Source="/Resources/underlinedTextIcon.png" Height="12" Width="12" Margin="6,0"/>
            </ToggleButton>
            <ComboBox Name="cmbFontFamily" SelectionChanged="cmbFontFamily_SelectionChanged" Padding="10,0" BorderBrush="Black" />
            <!--<ComboBoxItem Content="Arial" IsSelected="True"/>
                <ComboBoxItem Content="Times New Roman" />
                <ComboBoxItem Content="Comic Sans" />-->

            <ComboBox Name="cmbFontSize" Padding="8,0" BorderBrush="Black" IsEditable="True" TextBoxBase.TextChanged="cmbFontSize_TextChanged" />
           

            <Separator/>
            <Button>
                <Image Source="/add_image-512.webp" Height="12" Width="12" Margin="6,0"/>
            </Button>
        </ToolBar>
        <ListBox Grid.Row="2" Grid.Column="0" Background="AliceBlue">
            <!--<ListBox.ItemTemplate>
                <DataTemplate>
                    <Button>
                        <StackPanel>
                            <StackPanel.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Zmień nazwę"/>
                                    <MenuItem Header="Usuń"/>
                                </ContextMenu>
                            </StackPanel.ContextMenu>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>-->
            <ListBoxItem Content="Notatka 1">
                <ListBoxItem.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Zmień nazwę"/>
                        <MenuItem Header="Usuń"/>
                    </ContextMenu>
                </ListBoxItem.ContextMenu>
            </ListBoxItem>
            <ListBoxItem Content="Notatka 2">
                <ListBoxItem.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Zmień nazwę"/>
                        <MenuItem Header="Usuń"/>
                    </ContextMenu>
                </ListBoxItem.ContextMenu>
            </ListBoxItem>
        </ListBox>
        <TabControl Grid.Row="2" Grid.Column="1">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Header" Value="{Binding Header}" />
                    <Setter Property="Content" Value="{Binding Content}" />
                </Style>
            </TabControl.ItemContainerStyle>

            <TabItem Header="Sekcja 1">
                <TabItem.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Zmień nazwę"/>
                        <MenuItem Header="Usuń"/>
                    </ContextMenu>
                </TabItem.ContextMenu>
                <RichTextBox Name="tbEditor" SelectionChanged="tbEditor_SelectionChanged"   AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" />
            </TabItem>
            <TabItem Header="Sekcja 2">
                <TabItem.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Zmień nazwę"/>
                        <MenuItem Header="Usuń"/>
                    </ContextMenu>
                </TabItem.ContextMenu>
                <TextBox TextWrapping="Wrap"  AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Text="Przykładowa notatka 2"/>
            </TabItem>
            <TabItem Header="+"></TabItem>
        </TabControl>
    </Grid>
</Window>
